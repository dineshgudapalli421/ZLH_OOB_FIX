<core:FragmentDefinition
    xmlns="sap.ui.table"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:u="sap.ui.unified"
    xmlns:core="sap.ui.core"
    xmlns:m="sap.m"
>
    <Table
        id="idMiscChargeTable"
        rows="{OOBFixModel>/MISC}"
        selectionMode="Single"
        paste="onPaste"
        ariaLabelledBy="title"
        class="sapUiSizeCompact"
        visibleRowCount="4"
    >
        <columns>
            <Column width="8rem">
                <m:Label text="S.No" />
                <template>
                    <m:Text
                        text="{OOBFixModel>Sequence}"
                        wrapping="false"
                    />
                </template>
            </Column>
            <Column width="17rem">
                <m:Label text="Miscellaneous Charge Details" />
                <template>
                    <!-- <m:Label text="{OOBFixModel>ScreenField}" /> -->
                    <m:Select
                        enabled="{/Enabled}"
                        editable="{OOBFixModel>Editable}"
                        forceSelection="false"
                        selectedKey="{OOBFixModel>FieldId}"
                        change="onChangeMiscCharg"
                        items="{
							path: '/MiscChargeDescSet'
						}"
                    >
                        <core:Item
                            key="{Field_id}"
                            text="{MiscCharge}"
                        />
                    </m:Select>
                </template>
            </Column>
            <Column
                width="6rem"
                hAlign="End"
            >
                <m:Label text="Amount" />
                <template>
                    <m:Input
                        textAlign="End"
                        value="{path:'OOBFixModel>Amount',formatter:'.formatter.Currency' }"
                        change="onChangePrices"
                        editable="{= ${OOBFixModel>/IsReleased} !== 'true'}"
                    />
                </template>
            </Column>
            <!-- <Column>
                <m:Label text="Remove" />
                <template>
                    <m:CheckBox selected="{OOBFixModel>Remove}" />
                </template>
            </Column>
            <Column>
                <m:Label text="Add" />
                <template>
                    <m:CheckBox selected="{OOBFixModel>AddField}" />
                </template>
            </Column> -->
        </columns>
    </Table>
    <!-- <m:TextArea
            value=""
            growing="true"
            growingMaxLines="7"
            width="100%"
        /> -->
    <!-- </m:VBox> -->
</core:FragmentDefinition>
